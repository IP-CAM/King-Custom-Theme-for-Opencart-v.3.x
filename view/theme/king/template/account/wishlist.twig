{{ header }}
<div id="account-wishlist" class="main-content">
 <div class="navigation">
    <div class="wrap">
      <div class="navigation__wrap">
        <nav class="breadcrumbs">
          <ul class="breadcrumbs__list">
            {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumbs__list-item">
              <a class="breadcrumbs__list-link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>     
      </div>
    </div>
  </div>

{% if success %}
<div class="wrap">
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
</div>
{% endif %}


<section id="content" class="product-table">
 <div class="wrap">

  <div class="product-table__wishlist-form">
   {% if products %}
   <div class="product-table__wrap">
     <div class="product-table__title">
      <div class="product-table__item-column">
        <b class="product-table__title-mobile">{{ heading_title }}</b>
      </div>
      <div class="product-table__item-column">
        <b class="product-table__title-item">{{ column_image }}</b>
      </div>
      <div class="product-table__item-column">
        <b class="product-table__title-item">{{ column_name }}</b>
      </div>
      <div class="product-table__item-column">
        <b class="product-table__title-item">Колличество</b>
      </div>
      <div class="product-table__item-column">
        <b class="product-table__title-item">{{ column_price }}</b>
      </div>
      <div class="product-table__item-column">
        <b class="product-table__title-item">{{ column_action }}</b>
      </div>
    </div>
    {% for product in products %}
    <div class="product-table__item-wrap product-table__wrap--wishlist">
      <div class="product-table__item">
        <div class="product-table__item-column">
          <a class="product-table__close-btn" href="{{ product.remove }}" title="{{ button_remove }}"><i class="fa fa-times"></i></a>
        </div>
        <div class="product-table__item-column">
          {% if product.thumb %}
          <a href="{{ product.href }}"><img width="236" height="154" class="product-table__img" src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"></a>
          {% endif %}
        </div>
        <div class="product-table__item-column"><a href="{{ product.href }}" class="product-table__item-name">{{ product.name }}</a></div>
        <div class="product-table__item-column">
          <div class="number-input product-table__input">
            <button class="btn btn--step-up number-input__btn" type="button">+</button>
                <input id="wishlist-count" type="number" min="1" step="1" value="1">
            <button class="btn btn--step-down number-input__btn number-input__btn--bottom" type="button">-</button>
          </div>
        </div>
        <div class="product-table__item-column">
          {% if product.price %}
          {% if not product.special %}
          {{ product.price }}
          {% else %}
          <sapn class="product-table__item-price">
              <del class="prouct__price--old">{{ product.price }}</del>
              <span class="product__price">{{ product.special }}</span>
          </sapn>
          {% endif %}
          {% endif %}
        </div>

        <div class="product-table__item-column">
          <button type="button" onclick="cart.add('{{ product.product_id }}');" title="{{ button_cart }}" class="btn btn--simple product-table__btn-add">Добавить <sapn class="product-table__btn-mobile">в корзину</sapn></button>
        </div>
      </div>
      
    </div>
    {% endfor %}
  </div>
  {% else %}
  <p>{{ text_empty }}</p>
  {% endif %}
  <div class="product-table__submit">
    <a href="{{ continue }}" class="btn product-table__submit-btn">{{ button_continue }}</a>
  </div>
</div>




</div>
</section>

</div>
{{ footer }}