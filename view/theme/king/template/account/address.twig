{{ header }}
<div id="account-address" >
  <div class="navigation">
    <div class="wrap">
      <div class="navigation__wrap">
        <nav class="breadcrumbs">
          <ul class="breadcrumbs__list">
            {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumbs__list-item">
              <a class="breadcrumbs__list-link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
            {% endfor %}
          </ul>
        </nav>     
      </div>
    </div>
  </div>
  {% if success %}

  <div class="wrap">
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  </div>

  {% endif %}
  {% if error_warning %}
<div class="wrap">
    <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  </div>  {% endif %}
  <div class="wrap main-content" >
    {% if addresses %}
    <div class="verification">
      <div class="verification__wrap">
        <b class="verification__title">{{ text_address_book }}</b>
        {% for result in addresses %}
        <div class="verification__sect">
          <div>{{ result.address }}</div>
          <div>
            <a href="{{ result.update }}" class="btn-top">{{ button_edit }}</a> &nbsp; <a href="{{ result.delete }}" class="btn-delete">{{ button_delete }}</a>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    {% else %}
    <p>Список адресов в аккаунте, пуст.</p> 
    {% endif %}
    <div class="verification">
        <a href="{{ back }}" class="btn btn-default">{{ button_back }}</a>
        <a href="{{ add }}" class="btn btn-primary" style="float: right;">{{ button_new_address }}</a>
      </div>
  </div>
</div>
{{ footer }}